<div class="row-fluid">
    <div class="span2">
        <img class="img" <%= speaker.picture ? 'src="' + speaker.picture + '" style="border: 1px solid #2d2d29"' : 'src="img/nopic.png"' %> >
    </div>
    <div class="span4">
        <ul class="talk_details">
            <li><h2><%= title %></h1></li>
            <li><strong>Description:</strong><%= description %></li>
            <li><strong>Speaker:</strong><%= speaker.name %></li>
            <li><strong>Date:</strong><%= date %></li>
            <li><strong>Duration:</strong><%= Math.round(duration/60) %> minutes</li>
            <li><strong>Source:</strong><%= source %></li>
            <li><strong>License:</strong><a href=<%= license %> target="_blank">Creative Commons</a></li>
            <li><a href=<%= permalink %> ><strong>Download &rarr;</strong></a></li>
        </ul>
    </div>
    <div class="span6">
        <div class="ui360 ui360-vis">
         <a href=<%= permalink %> >Play</a>
        </div>
    </div>
</div>

<% $(".results, .metta_total").highlight($('.search_string').text()); %>